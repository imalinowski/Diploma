<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".internal.view.LogFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="55dp">

        <TextView
            android:id="@+id/logsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/black">

        <Button
            android:id="@+id/load_logs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/load_logs"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/searchDevicesBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search_for_devices"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/clear_logs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/clear_logs"
            style="?android:attr/buttonBarButtonStyle" />

    </LinearLayout>

</FrameLayout>